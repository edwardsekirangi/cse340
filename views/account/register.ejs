<h1><%= title %></h1>

<!-- Flash message area -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Registration form -->
<form action="/account/register" method="post" class="register-form">

  <div class="form-group">
    <label for="account_firstname">First Name</label>
    <input 
      type="text" 
      id="account_firstname" 
      name="account_firstname" 
      required
      value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>">
  </div>

  <div class="form-group">
    <label for="account_lastname">Last Name</label>
    <input 
      type="text" 
      id="account_lastname" 
      name="account_lastname" 
      required
      value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>">
  </div>

  <div class="form-group">
    <label for="account_email">Email Address</label>
    <input 
      type="email" 
      id="account_email" 
      name="account_email" 
      required
      value="<%= typeof account_email !== 'undefined' ? account_email : '' %>">
  </div>

  <div class="form-group">
    <label for="account_password">Password</label>
    <input 
      type="password" 
      id="account_password" 
      name="account_password" 
      required pattern="(?=^.{12,}$)(?=.*\d)(?=.*\W+)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
      placeholder="At least 12 chars, 1 capital, 1 number, 1 special char">
  </div>

  <button type="submit">Register</button>
</form>
<p class="login-link">
  Already have an account?
  <a href="/account/login">Login here</a>
</p>