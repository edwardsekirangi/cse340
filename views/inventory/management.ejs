<h1>Inventory Management</h1>

<% if (message) { %>
  <div class="flash-messages"><%= message %></div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="flash-message">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<ul>
  <li><a href="/inv/add-classification" class="man">Add New Classification</a></li>
  <li><a href="/inv/add-inventory" class="man">Add New Inventory Item</a></li>
</ul>

<h2>Manage Inventory</h2>
<p>Select a classification from the list to see the items belonging to that classification.</p>

<!-- classificationList is already a full <select> element -->
<%- classificationList %>

<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>
<script src="/js/inventory.js"></script>
